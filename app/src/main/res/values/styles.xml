<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/orange</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="EditTextLoginStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/underBarOrange</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/white</item>
    </style>

    <style name="ItemInformTitleStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
