<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_map_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="hoosasack.pillnow.Fragment.SettingFragment"
    tools:ignore="MissingPrefix">

    <include layout="@layout/actionbar_setting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center|left"
            android:text="내 정보 설정"
            android:textColor="@color/textBlack"
            android:textSize="15sp"
            app:font="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_setting_age"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="나이 재설정"
            android:textColor="@color/orange"
            android:textSize="15sp"
            app:font="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:text="생년월일을 다시 설정합니다"
            android:textColor="@color/textBlack"
            android:textSize="12sp"
            app:font="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/orange" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_setting_allergy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="알러지 정보 입력"
            android:textColor="@color/orange"
            android:textSize="15sp"
            app:font="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:text="내가 가지고 있는 약 알러지 성분들을 미리 작성합니다."
            android:textColor="@color/textBlack"
            android:textSize="12sp"
            app:font="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center|left"
            android:text="간편 알림 설정"
            android:textColor="@color/textBlack"
            android:textSize="15sp"
            app:font="normal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_setting_meal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="식사시간 설정"
            android:textColor="@color/orange"
            android:textSize="15sp"
            app:font="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:text="식사시간을 설정해두면 복용 알림을 보내드립니다."
            android:textColor="@color/textBlack"
            android:textSize="12sp"
            app:font="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center|left"
            android:text="사용자 정보"
            android:textColor="@color/textBlack"
            android:textSize="15sp"
            app:font="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_setting_volume"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="볼륨"
            android:textColor="@color/orange"
            android:textSize="15sp"
            app:font="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:text="푸쉬 알림의 볼륨을 설정합니다"
            android:textColor="@color/textBlack"
            android:textSize="12sp"
            app:font="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/orange" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_setting_notice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="알림음 설정"
            android:textColor="@color/orange"
            android:textSize="15sp"
            app:font="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:text="푸쉬 알림의 알림음을 설정합니다"
            android:textColor="@color/textBlack"
            android:textSize="12sp"
            app:font="normal" />
    </LinearLayout>

</LinearLayout>
